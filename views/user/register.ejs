<% layout("layouts/boilerplate") %> 
<div class="row">
    <div class="col-6 offset-3 ">
        <h1 class="text-align">Register</h1>
        <form action="/register" method="post" novalidate class="form-validate">
            <div class="form-group mb-3">
                <label for="username">Username</label>
                <input class="form-control" type="text" placeholder="username" id="username" name="username" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="form-group mb-3">
                <label for="email">Email</label>
                <input class="form-control" type="email" placeholder="email" id="email" name="email" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="form-group mb-3">
                <label for="password">Password</label>
                <input class="form-control" type="password" placeholder="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <button class="btn btn-success">Register</button>
        </form>
    </div>
</div>