<% layout("layouts/boilerplate") %> 
    <h1 >All Campgrounds</h1>
    <a href="/campground/new" class="btn btn-success mb-3">New Campground</a>

        <% for(let campground of data){ %> 
            <div class="card mb-4">
                <div class="row">
                    <div class="col-md-4">
                        <img class="card-img-top" src="<%= campground.image[0].url %> " alt="Card image cap">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= campground.title %></h5>
                            <p class="card-text"><%= campground.description %> </p>
                            <a href="/campground/<%= campground._id %> " class="btn btn-primary">View <%= campground.title %></a>
                          </div>
                    </div>
                </div>
              </div>
        <% } %> 
